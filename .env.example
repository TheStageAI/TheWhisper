# Backend mode: "local" or "remote"
BACKEND_MODE=local

# Local backend URL
LOCAL_BACKEND_URL=http://localhost:8800

# Remote backend URL (change to your remote server)
REMOTE_BACKEND_URL=https://api.thestage.ai

# ASR Backend Type: "apple" (local MLX) or "whisper" (remote Triton API)
ASR_BACKEND_TYPE=apple

# Triton/Whisper remote backend settings (used when ASR_BACKEND_TYPE=whisper)
TRITON_URL=http://127.0.0.1:8080/v1/audio/transcriptions
TRITON_AUTH_TOKEN=your_auth_token_here
TRITON_MODEL_NAME=thewhisper-large-v3-turbo-xl-cl15-bs16
TRITON_LANG_ID=en

# Streaming settings
ASR_STREAMING_PORT=8800
CHUNK_SECONDS=15
